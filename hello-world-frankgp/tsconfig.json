{
  "compilerOptions": {
    "allowJs": true, // Permite compilar archivos JavaScript
    "declaration": true, // Genera archivos de declaración (.d.ts)
    "outDir": "./dist", // Directorio de salida
    "module": "esnext", // Usa módulos ES
    "target": "esnext" // Compila para la última versión de JavaScript
  },
  "include": ["src/**/*.js"], // Incluye solo archivos JavaScript
  "exclude": ["node_modules"] // Excluye dependencias
}
